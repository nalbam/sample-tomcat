{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "annotations": {
      "iconClass": "icon-rh-openjdk",
      "tags": "java",
      "version": "1.0.0",
      "description": "sample spring boot application."
    },
    "name": "sample-tomcat-pipeline"
  },
  "labels": {
    "template": "sample-tomcat-pipeline",
    "xpaas": "1.0.0"
  },
  "message": "A new java application has been created in your project.",
  "parameters": [
    {
      "name": "APPLICATION_NAME",
      "displayName": "Name",
      "description": "Identifies the resources created for this application.",
      "value": "sample-tomcat",
      "required": true
    },
    {
      "name": "SOURCE_REPOSITORY_URL",
      "displayName": "Git Repository URL",
      "description": "Git source URI for application",
      "value": "https://github.com/nalbam/sample-tomcat",
      "required": true
    },
    {
      "name": "SOURCE_REPOSITORY_REF",
      "displayName": "Git Reference",
      "description": "Optional branch, tag, or commit.",
      "value": "master",
      "required": false
    },
    {
      "name": "SOURCE_REPOSITORY_SECRET",
      "displayName": "Git SourceSecret",
      "description": "Optional SourceSecret name.",
      "value": "",
      "required": false
    },
    {
      "name": "CONTEXT_DIR",
      "displayName": "Context Directory",
      "description": "Path within Git project to build; empty for root project directory.",
      "value": "",
      "required": false
    },
    {
      "name": "GENERIC_WEBHOOK_SECRET",
      "displayName": "Generic Webhook Secret",
      "description": "Generic build trigger secret",
      "from": "[a-zA-Z0-9]{8}",
      "generate": "expression",
      "required": true
    },
    {
      "name": "GITHUB_WEBHOOK_SECRET",
      "displayName": "Github Webhook Secret",
      "description": "GitHub trigger secret",
      "from": "[a-zA-Z0-9]{8}",
      "generate": "expression",
      "required": true
    },
    {
      "name": "JENKINS_URL",
      "displayName": "Jenkins URL",
      "description": "The Jenkins URL",
      "value": "http://jenkins.ops.svc:8080",
      "required": false
    },
    {
      "name": "SLACK_WEBHOOK_URL",
      "displayName": "Slack Webhook URL",
      "description": "Send your notification",
      "value": "",
      "required": false
    },
    {
      "name": "MAVEN_MIRROR_URL",
      "displayName": "Custom Maven Mirror URL",
      "description": "The custom Maven mirror URL",
      "value": "http://nexus.ops.svc:8081/repository/maven-public/",
      "required": false
    },
    {
      "name": "SONAR_HOST_URL",
      "displayName": "Sonar Host URL",
      "description": "The Sonar Host URL",
      "value": "http://sonarqube.ops.svc:9000",
      "required": false
    }
  ],
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}",
        "labels": {
          "application": "${APPLICATION_NAME}"
        }
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}",
        "labels": {
          "application": "${APPLICATION_NAME}"
        }
      },
      "spec": {
        "source": {
          "type": "Git",
          "git": {
            "uri": "${SOURCE_REPOSITORY_URL}",
            "ref": "${SOURCE_REPOSITORY_REF}"
          },
          "sourceSecret": {
            "name": "${SOURCE_REPOSITORY_SECRET}"
          },
          "contextDir": "${CONTEXT_DIR}"
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "namespace": "openshift",
              "name": "tomcat:latest"
            },
            "env": [
              {
                "name": "MAVEN_MIRROR_URL",
                "value": "${MAVEN_MIRROR_URL}"
              }
            ]
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${APPLICATION_NAME}:latest"
          }
        }
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}-pipeline",
        "labels": {
          "application": "${APPLICATION_NAME}"
        }
      },
      "spec": {
        "source": {
          "type": "Git",
          "git": {
            "uri": "${SOURCE_REPOSITORY_URL}",
            "ref": "${SOURCE_REPOSITORY_REF}"
          },
          "sourceSecret": {
            "name": "${SOURCE_REPOSITORY_SECRET}"
          },
          "contextDir": "${CONTEXT_DIR}"
        },
        "strategy": {
          "type": "JenkinsPipeline",
          "jenkinsPipelineStrategy": {
            "jenkinsfilePath": "openshift/pipeline/Jenkinsfile",
            "env": [
              {
                "name": "APPLICATION_NAME",
                "value": "${APPLICATION_NAME}"
              },
              {
                "name": "SOURCE_REPOSITORY_URL",
                "value": "${SOURCE_REPOSITORY_URL}"
              },
              {
                "name": "SOURCE_REPOSITORY_REF",
                "value": "${SOURCE_REPOSITORY_REF}"
              },
              {
                "name": "SOURCE_REPOSITORY_SECRET",
                "value": "${SOURCE_REPOSITORY_SECRET}"
              },
              {
                "name": "JENKINS_URL",
                "value": "${JENKINS_URL}"
              },
              {
                "name": "SLACK_WEBHOOK_URL",
                "value": "${SLACK_WEBHOOK_URL}"
              },
              {
                "name": "MAVEN_MIRROR_URL",
                "value": "${MAVEN_MIRROR_URL}"
              },
              {
                "name": "SONAR_HOST_URL",
                "value": "${SONAR_HOST_URL}"
              }
            ]
          }
        },
        "triggers": [
          {
            "type": "Generic",
            "generic": {
              "secret": "${GENERIC_WEBHOOK_SECRET}"
            }
          },
          {
            "type": "GitHub",
            "github": {
              "secret": "${GITHUB_WEBHOOK_SECRET}"
            }
          },
          {
            "type": "ImageChange",
            "imageChange": {}
          },
          {
            "type": "ConfigChange"
          }
        ]
      }
    }
  ]
}
